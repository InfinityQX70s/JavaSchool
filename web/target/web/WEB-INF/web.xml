<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <filter>
    <filter-name>filter</filter-name>
    <filter-class>com.jschool.CustomFilter</filter-class>
  </filter>
  <filter>
    <filter-name>checkRole</filter-name>
    <filter-class>com.jschool.LoginFilter</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>filter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>checkRole</filter-name>
    <url-pattern>/logiweb/*</url-pattern>
  </filter-mapping>


  <servlet>
    <servlet-name>FrontController</servlet-name>
    <servlet-class>com.jschool.FrontController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>FrontController</servlet-name>
    <url-pattern>/logiweb/*</url-pattern>
  </servlet-mapping>

</web-app>
