<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
   http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

    <persistence-unit name="logiweb">
        <class>com.jschool.entities.CargoEntity</class>
        <class>com.jschool.entities.CargoStatusLogEntity</class>
        <class>com.jschool.entities.CityEntity</class>
        <class>com.jschool.entities.DriverEntity</class>
        <class>com.jschool.entities.DriverStatisticEntity</class>
        <class>com.jschool.entities.DriverStatusLogEntity</class>
        <class>com.jschool.entities.OrdersEntity</class>
        <class>com.jschool.entities.RoutePointEntity</class>
        <class>com.jschool.entities.TruckEntity</class>
        <class>com.jschool.entities.UserEntity</class>

        <properties>
            <property name="openjpa.ConnectionURL" value="jdbc:mysql://localhost:3306/logiweb"/>
            <property name="openjpa.ConnectionDriverName" value="com.mysql.jdbc.Driver"/>
            <property name="openjpa.ConnectionUserName" value="logiweb"/>
            <property name="openjpa.ConnectionPassword" value="secret"/>
        </properties>

    </persistence-unit>
</persistence>